{
    "compilerOptions": {
        "target": "ES2016",
        "module": "commonjs",
        "outDir": "/dist",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "pretty": true,
        "strict": true,
        "baseUrl": "./src",
        "noUnusedLocals": true,
        "typeRoots": ["./node_modules/@types", "./src/types"]
        //"types": ["mocha", "node"]
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules"
    ]
}